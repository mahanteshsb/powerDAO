							<suiteXmlFile>resources\testng.xml</suiteXmlFile>



						</suiteXmlFiles>
					</configuration>
				</plugin>



				<plugin>
					<artifactId>maven-clean-plugin</artifactId>
					<version>3.2.0</version>
