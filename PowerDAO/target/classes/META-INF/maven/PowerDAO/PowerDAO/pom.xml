  <build>
    <plugins>
      
				<plugin>
					<inherited>true</inherited>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
   					 <version>3.10.1</version>
					<configuration>
						<source>1.8</source>
						<target>1.8</target>
						<encoding>UTF-8</encoding>
						<fork>true</fork>
						<!-- <executable>C:\Program Files\Java\jdk1.8.0_141\bin\javac.exe</executable> -->
					</configuration>
				</plugin>

				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-surefire-plugin</artifactId>
 					 <version>3.0.0-M7</version>

					<configuration>
						<!-- <properties> <property> <name>usedefaultlisteners</name> <value>false</value> 
							disabling default listeners is optional </property> <name>listener</name> 
							<value>class-name=com.CRM.utilities.Reporting</value> </properties> -->

						<suiteXmlFiles>
